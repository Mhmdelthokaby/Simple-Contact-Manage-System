@model Contacts
@{
    ViewData["Title"] = "Edit";
}

<h1>Contacts : @Model.Name</h1>


<section class="py-5 my-5">
    
    <div>
        <form asp-action="Edit">
            <div class="vstack gap-3">
                <div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="form-text"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber" class="form-text"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="form-text"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="Notes"></label>
                        <input class="form-control" asp-for="Notes">
                    </div>
                </div>

                <div class="hstack gap-3">
                    <input type="submit" value="submit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</section>

